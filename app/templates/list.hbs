<div class="ui raised segment">
  <h2 class="ui header">List {{model.title}}</h2>
  <div class="ui labeled input">
    <div class="ui teal label">
      Enter the name of the list
    </div>
    {{input type="text" value=newList placeholder="Title..." insert-newline="insertNewline"}}
  </div>
  <div class="ui blue button" {{action 'addItem' "list"}}>
    Add List
  </div>
</div>

<div class="ui bottom attached segment pushable">
  <div class="ui visible left vertical sidebar menu">
    <a class="item" {{action 'home'}}>
      <i class="home icon"></i>
      Home
    </a>

    {{#each lists as |list|}}
      {{list-comp
        list=list
        lists=lists
        store=store
      }}
    {{/each}}

  </div>
  <br>

  <div class="pusher">
    <h2 class="ui header">{{model.title}} Task</h2>
    <div class="ui labeled input">
      <div class="ui teal label">
        Enter the name of the Task
      </div>
      {{input type="text" value=newTask placeholder="Title..." insert-newline="insertNewline"}}
    </div>
    <div class="ui blue button" {{action 'addItem' "task"}}>
      Add Task
    </div>

    {{#each model.tasks as |task|}}
      {{task-comp
        task=task
        tasks=tasks
        store=store
      }}
    {{/each}}

  </div>
</div>
